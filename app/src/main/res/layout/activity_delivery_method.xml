<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_delivery_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_app_bg"
    tools:context="winapp.hajikadir.customer.activity.DeliveryMethodActivity">


    <TextView
        android:text="@string/please_select_the_preferred_shipping_method_to_use_on_this_order"
        android:layout_width="match_parent"
        android:gravity="left|center"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@android:color/black"
        android:padding="3dip"
        android:maxLines="2"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/group_row"
        android:orientation="vertical">
        <TextView
            android:text="@string/delivery_charges"
            android:layout_width="match_parent"
            android:gravity="left|center"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@android:color/black"
            android:padding="3dip"
            android:layout_height="35dip"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/deliveryCharges_layout"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_height="wrap_content">


              <TextView
                  android:text="@string/delivery_charges"
                  android:layout_width="0dip"
                  android:layout_weight=".5"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/black"
                  />

              <TextView
                  android:text=""
                  android:layout_width="0dip"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:paddingLeft="5dip"
                  android:layout_margin="2dip"
                  android:textColor="@android:color/black"
                  android:id="@+id/deliveryCharges" />
          </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <TextView
                    android:text="@string/total_distance"
                    android:layout_width="0dip"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:text=""
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dip"
                    android:layout_margin="2dip"
                    android:textColor="@android:color/black"
                    android:id="@+id/totalDistance" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/group_row"
        android:orientation="vertical">
        <TextView
            android:text="@string/pick_up"
            android:layout_width="match_parent"
            android:gravity="left|center"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@android:color/black"
            android:padding="3dip"
            android:layout_height="35dip"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/pickup_layout"
            android:orientation="vertical">


            <TextView
                android:text="@string/pickup_from_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:layout_margin="2dip"
                android:textAllCaps="true"
                android:textStyle="bold"
                 />

            <TextView
                android:text="name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:layout_margin="2dip"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:id="@+id/name" />

            <TextView
                android:text="address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:layout_margin="2dip"
                android:textColor="@android:color/black"
                android:id="@+id/address1" />
            <TextView
                android:text="@string/address2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:layout_margin="2dip"
                android:visibility="gone"
                android:textColor="@android:color/black"
                android:id="@+id/address2" />

            <TextView
                android:text="Country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:layout_margin="2dip"
                android:textColor="@android:color/black"
                android:id="@+id/country" />
            <TextView
                android:text="Postal code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:layout_margin="2dip"
                android:textColor="@android:color/black"
                android:id="@+id/postalcode" />

            <TextView
                android:text="phoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:layout_margin="2dip"
                android:textColor="@android:color/black"
                android:id="@+id/phoneNo" />


</LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="10dip"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:layout_alignParentRight="true"
        android:textAllCaps="true"
        android:text="@string/prompt_continue" />
</LinearLayout>
